%nav.navbar.navbar-default.navbar-static-top
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Pingpong
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      = link_to 'Log Game', new_log_game_path, class: 'btn btn-success navbar-btn'
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li= link_to 'Leadboard', log_games_leadboard_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to "Games History", log_games_path
          %li
            = link_to "My History Games", log_games_my_history_path
          %li= link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Login', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
    / /.navbar-collapse
