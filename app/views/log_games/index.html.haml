%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Date played
      %th User
      %th Opponent
      %th Your score
      %th Opponent score
      %th Acction Links

  %tbody
    - @log_games.each do |log_game|
      - @model = log_game
      %tr
        %td= log_game.date_played
        %td= log_game.user.name
        %td= log_game.opponent.name
        %td= log_game.your_score
        %td= log_game.opponent_score
        - if have_any_index_action?(controller_name)
          %td= render 'partials/admin/index_links'
